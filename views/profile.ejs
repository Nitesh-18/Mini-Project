<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>create Post</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .body {
            overflow-y: auto;
            scroll-behavior: smooth;
            -ms-overflow-style: none;
            /* for Internet Explorer/Edge */
            scrollbar-width: none;
            /* for Firefox */
        }

        .body::-webkit-scrollbar {
            display: none;
            /* for Chrome, Safari, and Opera */
        }

        .animated-text {
            animation: animate 2s infinite;
        }

        @keyframes animate {
            0% {
                opacity: 0.5;
            }

            50% {
                opacity: 1;
            }

            100% {
                opacity: 0.5;
            }
        }

        .container {
            display: grid;
            grid-template-rows: auto 1fr;
            gap: 20px;
        }

        .form-container {
            background-color: #fff;
            /* changed to white */
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .post-card {
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .post-card:hover {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body class="bg-gradient-to-r from-teal-500 to-lime-500 h-screen"> <!-- changed to teal and lime gradient -->
    <nav class="fixed top-0 right-0 p-4 z-10 ">
        <a href="/logout" class="bg-red-500 text-white rounded-md p-2">Logout</a>
    </nav>
    <div class="min-h-screen p-12 flex justify-center">
        <div class="flex w-full pt-5">
            <div class="w-1/2">
                <h2 class="text-9xl font-bold animated-text text-teal-700 mb-3">Hey <%= user.name %>!</h2>
                <h4 class="text-gray-600 pt-5">You can create a new post here...</h4>
            </div>
            <div class="w-1/2">
                <div class="form-container">
                    <form action="/post" method="POST">
                        <h3 class="text-lg font-bold mb-4">Create a new post</h3>
                        <div class="flex flex-col">
                            <label for="title" class="text-gray-600">Title</label>
                            <input type="text" name="title" id="title"
                                class="border-2 border-gray-300 rounded-md p-2 mt-2" placeholder="Enter title" required
                                value="<%= user.title %>">
                            <label for="body" class="text-gray-600">Body</label>
                            <textarea name="body" id="body" cols="30" rows="10"
                                class="border-2 border-gray-300 rounded-md p-2 mt-2" placeholder="Enter body"
                                name="content" required></textarea>
                            <button type="submit" class="bg-orange-500 text-white rounded-md p-2 mt-2">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="w-full pt-5">
    <h4 class="text-xl text-gray-600">Your Previously created Posts</h4>
    <div class="flex flex-wrap justify-center">
        <% posts.forEach(function(post) { %>
            <div class="post-card w-1/2 md:w-1/3 xl:w-1/4 p-4">
                <h5 class="text-lg font-bold mb-2">
                    <%= post.title %>
                </h5>
                <p class="text-gray-600">
                    <%= post.content %>
                </p>
                <div class="flex justify-between">
                    <button class="bg-blue-500 text-white rounded-md p-2">Like (<%= post.likes %>)</button>
                    <button class="bg-yellow-500 text-white rounded-md p-2">Edit</button>
                </div>
            </div>
            <% }); %>
    </div>
</div>
    <script>
        function likePost(postId) {
            fetch('/like', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ postId }),
            })
                .then(response => response.text())
                .then(message => console.log(message));
        }
    </script>
</body>

</html>