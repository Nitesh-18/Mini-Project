<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="/public/styles/profile-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            overflow-y: auto;
            scroll-behavior: smooth;
            -ms-overflow-style: none;
            /* for Internet Explorer/Edge */
            scrollbar-width: thin;
            /* for Firefox */
        }

        body::-webkit-scrollbar {
            display: none;
            /* for Chrome, Safari, and Opera */
        }

        .animated-text {
            animation: animate 2s infinite;
        }

        @keyframes animate {
            0% {
                opacity: 0.5;
            }

            50% {
                opacity: 1;
            }

            100% {
                opacity: 0.5;
            }
        }

        .container {
            display: grid;
            grid-template-rows: auto 1fr;
            gap: 20px;
        }

        .form-container {
            background-color: #fff;
            /* changed to white */
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .post-card {
            display: flex;
            flex-direction: column;
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .post-card>* {
            flex-grow: 0;
        }

        .post-card p {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            max-width: 250px;
            /* adjust the width as needed */
        }

        .post-card p span.hidden-content {
            display: none;
        }

        .post-card p.read-more-link {
            display: inline-block;
        }

        .post-card>p {
            flex-grow: 1;
        }

        .post-card>div:last-child {
            flex-grow: 0;
        }

        .post-card:hover {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .hidden-content {
            display: none;
        }

        .read-more-link {
            color: blue;
            cursor: pointer;
        }
    </style>
</head>

<body class="bg-gradient-to-r from-teal-500 to-lime-500 h-screen">
    <nav class="fixed top-0 right-0 p-4 z-10 ">
        <a href="/logout" class="bg-red-500 text-white rounded-md p-2">Logout</a>
    </nav>
    <div class="min-h-screen p-12 flex justify-center">
        <div class="flex w-full pt-5">
            <div class="w-1/2">
                <h2 class="text-9xl font-bold animated-text text-teal-700 mb-3">Hey <%= user.name %>!</h2>
                <h4 class="text-gray-600 pt-5">You can create a new post here...</h4>
            </div>
            <div class="w-1/2">
                <div class="form-container">
                    <form action="/post" method="POST">
                        <h3 class="text-lg font-bold mb-4">Create a new post</h3>
                        <div class="flex flex-col">
                            <label for="title" class="text-gray-600">Title</label>
                            <input type="text" name="title" id="title"
                                class="border-2 border-gray-300 rounded-md p-2 mt-2" placeholder="Enter title" required
                                value="<%= user.title %>">
                            <label for="body" class="text-gray-600">Body</label>
                            <textarea name="content" id="content" cols="30" rows="10"
                                class="border-2 border-gray-300 rounded-md p-2 mt-2" placeholder="Enter body"
                                required></textarea>
                            <button type="submit" class="bg-orange-500 text-white rounded-md p-2 mt-2">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="w-full pt-5">
        <h4 class="text-3xl font-bold text-gray-600 pl-12">Your Posts</h4>
        <div class="flex flex-wrap justify-center mt-5">
            <% user.posts.reverse().forEach(function(post) { %>
                <div class="post-card w-full md:w-1/2 xl:w-1/3 p-4">
                    <h5 class="text-lg font-bold mb-2">
                        <%= post.title %>
                    </h5>
                    <p class="text-gray-600">
                        <%= post.content.length > 20 ? post.content.substring(0, 20) : '' %>
                        <% if (post.content.length > 20) { %>
                            <span class="hidden-content">
                                <%= post.content.substring(20) %>
                            </span>
                            <span class="read-more-link"
                                data-content="<%= encodeURIComponent(post.content) %>"
                                data-title="<%= encodeURIComponent(post.title) %>"
                                onclick="readMore(this)">... Read More</span>
                        <% } else { %>
                            <%= post.content %>
                        <% } %>
                    </p>
                    <div class="flex justify-between">
                        <a href="/like/<%= post._id %>" class="bg-blue-500 text-white rounded-md p-2">Like (<%= post.likes %>)</a>
                        <a href="/edit/<%= post._id %>" class="bg-yellow-500 text-white rounded-md p-2">Edit</a>
                        <a href="/delete/<%= post._id %>" class="bg-red-500 text-white rounded-md p-2">Delete</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modal-title" class="font-bold"></h2>
            <p id="modal-content"></p>
        </div>
    </div>

    <script>
        function readMore(element) {
            const content = decodeURIComponent(element.getAttribute('data-content'));
            const title = decodeURIComponent(element.getAttribute('data-title'));
            document.getElementById('modal-title').innerText = title;
            document.getElementById('modal-content').innerText = content;
            document.getElementById('myModal').style.display = 'block';
        }

        document.querySelector('.close').onclick = function () {
            document.getElementById('myModal').style.display = 'none';
        };

        window.onclick = function (event) {
            if (event.target == document.getElementById('myModal')) {
                document.getElementById('myModal').style.display = 'none';
            }
        };
    </script>
</body>

</html>
